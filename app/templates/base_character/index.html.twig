{% extends 'base.html.twig' %}

{% block title %}Hello BaseCharacterController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table>
        {% for statValue in data.getCharacterStatValue %}
            <tr>
                <td>{{ statValue.getCharacterStat.getName }}</td>
                <td>{{ statValue.getValue }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
