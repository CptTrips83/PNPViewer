{% extends 'base.html.twig' %}

{% block title %}Hello CharacterController!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="characterDataBasics" class="card bg-default details-page page-all">
                    <h5 class="card-header">
                        Charakterdaten
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            <label>Name</label>
                            <br>
                            <span class="mx-3">{{ data['data'].name }}</span>
                        </p>
                        <p class="card-text">
                            <label>Handle</label>
                            <br>
                            <span class="mx-3">{{ data['data'].handle }}</span>
                        </p>
                    </div>
                </div>
                <br>
                <div id="characterDataClasses" class="card details-page">
                    <h5 class="card-header">
                        Klassen
                    </h5>
                    <div class="card-body">
                        {% for class in data['classes'] %}
                            <p class="card-text">
                                <label>{{ class.classData.description }}</label>
                                <br>
                                <span class="mx-3">Level: {{ class.level }}</span>
                            </p>
                        {% endfor %}
                    </div>
                </div>
                <br>
                <div id="characterDataDetails" class="card details-page">
                    <h5 class="card-header">
                        Details
                    </h5>
                    <div class="card-body">
                        {% for detail in data['details'] %}
                            <p class="card-text">
                                <label>{{ detail.category.description }}</label>
                                <br>
                                <span class="mx-3">{{ detail.statData.description }}</span>
                            </p>
                        {% endfor %}
                    </div>
                </div>
                <br>
                <div id="characterDataSkills" class="card details-page">
                    <h5 class="card-header">
                        Attribute
                    </h5>
                    <div class="card-body">
                        {% for skill in data['skills'] %}
                            <p class="card-text">
                                <label>{{ skill.statData.description }}</label>
                                <br>
                                <span class="mx-3">Level: {{ skill.value }}</span>
                            </p>
                        {% endfor %}
                    </div>
                </div>
                <br>
